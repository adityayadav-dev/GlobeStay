      <div class="container my-4">
  <div class="row justify-content-center g-4">
    <% for(let listing of alllistings) { %>
      
      <div class="col-md-4 col-sm-6 col-12">
        <div class="card shadow-sm border-0 h-100 listing-card">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
            <img src="<%= listing.image.url %>" class="card-img-top rounded-top" alt="Listing image">
            <div class="card-body d-flex flex-column justify-content-between">
              <h5 class="card-title fw-semibold text-truncate">
                <%= listing.title %>
              </h5>
                  <p class="card-text text-muted mb-2">
                    <i class="fa-solid fa-indian-rupee-sign"></i>
                      <span 
                        class="listing-price text-dark fw-semibold"
                        data-base-price="<%= listing.price %>">
                        <%= listing.price.toLocaleString("en-IN") %>
                      </span>

                    / night
                  </p>

            </div>
          </a>
        </div>
      </div>
    <% } %>
  </div>
</div>

  