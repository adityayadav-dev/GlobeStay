<% layout("/layout/boilerplate.ejs") %>
<body class="bg-light">
  <div class="container my-5">

    <!-- Hero Image -->
    <div class="listing-hero mb-4">
      <img src="<%= listing.image.url %>" alt="<%= listing.title %>" 
           class="img-fluid rounded-4 w-80 object-fit-cover" 
           style="height: 350px; object-fit: cover;">
    </div>

    <!-- Header: Title, Location, Price -->
    <div class="listing-header d-flex flex-column flex-md-row justify-content-between align-items-start mb-4">
      <div>
        <h2 class="listing-title mb-1"><%= listing.title %></h2>
        <p class="listing-location text-muted mb-0">
          <i class="fa-solid fa-location-dot me-1"></i>
          <%= listing.location %>, <%= listing.country %>
        </p>
      </div>
      <div class="listing-price text-primary fs-4 fw-semibold mt-3 mt-md-0">
        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
      </div>
    </div>

    <!-- Description -->
    <div class="listing-description bg-white p-4 rounded-4 shadow-sm mb-4">
      <h5 class="mb-3">About this place</h5>
      <p class="text-muted"><%= listing.description %></p>
      <p class="text-muted text-end"><i>Owned by: <%= listing.owner.username %></i></p>


    </div>

    <!-- Actions -->
     <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
    <div class="d-flex gap-3 flex-wrap mb-5">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary flex-fill">
        <i class="fa-solid fa-edit me-1"></i> Edit Listing
      </a>

      <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="flex-fill">
        <button type="submit" class="btn btn-outline-danger w-100">
          <i class="fa-solid fa-trash me-1"></i> Delete Listing
        </button>
      </form>
    </div>
    <% } %>
    <!-- Review Section -->
    <div class="review-section py-4 px-3">
      <h5 class="mb-3 fw-semibold">Leave a Review</h5>

      <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate  >
        <!-- <div class="mb-3">
          <label for="rating" class="form-label fw-semibold">Rating</label>
          <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]" required>
          <div class="d-flex justify-content-between text-muted small">
            <span>1</span><span>2</span><span>3</span><span>4</span><span>5</span>
          </div>
        </div> -->
        <div class="mb-3">
          <label for="rating" class="form-label fw-semibold">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label for="comment" class="form-label fw-semibold">Comment</label>
          <textarea class="form-control rounded-3" name="review[comment]" id="comment" rows="2"
                    placeholder="Write your experience..." required></textarea>
                    <div class="invalid-feedback">
                Please Add Comments for Review
              </div>
        </div>

        <button type="submit" class="btn btn-primary btn-sm">
          <i class="fa-solid fa-paper-plane me-1"></i> Submit
        </button>
      </form>
    </div>

<!-- Reviews Display Section -->
<div class="mt-5  g-4">
  <h5 class="fw-semibold mb-3 mr-3">Guest Reviews</h5>

  <% if (listing.reviews.length === 0) { %>
    <p class="text-muted fst-italic">No reviews yet. Be the first to share your experience!</p>
  <% } else { %>
    <% listing.reviews.forEach(review => { %>
      <div class=" g-4 p-3 mb-3 border rounded-3 bg-white shadow-sm">

        <!-- Header: User + Stars   -->
        <div class="d-flex justify-content-between align-items-center mb-2">
          <div class="d-flex align-items-center gap-2">
            <i class="fa-solid fa-user-circle fs-4 text-primary"></i>
            <span class="fw-semibold">
               <%= review.author ? review.author.username : "Anonymous" %>
            </span>
          </div>

          <div class="text-end">
             <p class="starability-result" data-rating="<%= review.rating %>"> </p>  
          </div>
        </div>

        <!-- Review Text & date and time-->
        <p class="mb-0 text-muted"><%= review.comment %></p>

        <div class="text-end">
          <small class="text-muted">
                <%= new Date(review.createdAt).toLocaleString("en-IN", {
                      dateStyle: "medium",
                      timeStyle: "short"
                    }) %>
          </small>
        </div>

       <!-- Delete Icon -->
        <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
        <div class="text-end mt-1">
          <form 
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" 
            method="POST"
            
            style="display: inline;"
          >
                  <button 
                  class="btn p-1 bg-light border rounded-circle shadow-sm text-danger"
                  style="width:32px; height:32px; line-height:0;"
                >
                  <i class="fa-solid fa-trash"></i>
                </button>
          </form>
        </div>
        <% } %>
      </div>
    <% }) %>
  <% } %>
</div>



  </div>
</body>
