<% layout("/layout/boilerplate.ejs") %>

<style>
  /* Smooth body gradient */
  body {
    background: linear-gradient(135deg, #e9e4ff, #ffffff);
  }

  /* Card UI upgrades */
  .form-card {
    border-radius: 20px !important;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .form-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.08);
  }

  /* Input enhancements */
  .form-control {
    border-radius: 12px;
    padding: 10px 14px;
    transition: 0.2s ease-in-out;
  }

  .form-control:focus {
    box-shadow: 0 0 8px rgba(177, 151, 252, 0.7);
    border-color: #B197FC;
  }

  .form-control:hover {
    border-color: #B197FC;
  }

  /* Button upgrades */
  .create-btn {
    background: #B197FC;
    border: none;
    border-radius: 12px;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .create-btn:hover {
    background: #9d82fb;
    transform: translateY(-2px);
  }

  .create-btn:active {
    transform: scale(0.97);
  }

  .signup-text {
  text-align: center;
  margin-top: 20px;   /* increase if you want more spacing */
  font-size: 16px;
  font-weight: 600;
}

.signup-text a {
  color: #7f5bff;
  font-weight: 700;
  text-decoration: none;
}

.signup-text a:hover {
  text-decoration: underline;
}

</style>

<body>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 p-4 form-card">

          <!-- Login Heading -->
          <h3 class="text-center mb-4 fw-semibold" style="color: #B197FC;">
            <i class="fa-solid fa-right-to-bracket me-2"></i> Welcome Back to GlobeStay
          </h3>

          <!-- Login Form -->
          <form action="/login" method="POST" class="needs-validation" novalidate>

            <!-- Username -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Username</label>
              <input type="text" class="form-control" name="username" placeholder="Enter Username" required>
              <div class="invalid-feedback">Please enter your username.</div>
            </div>

            <!-- Password -->
            <div class="mb-4">
              <label class="form-label fw-semibold">Password</label>
              <input type="password" class="form-control" name="password" placeholder="Enter Password" required>
              <div class="invalid-feedback">Password is required.</div>
            </div>

            <!-- Button -->
            <div class="d-grid">
              <button class="btn btn-primary btn-lg create-btn" type="submit">
                <i class="fa-solid fa-arrow-right-to-bracket me-2"></i> Login
              </button>
            </div>

          </form>

        </div>
        <p class="signup-text">First time on GlobeStay? <a href="/signup">Sign up now</a></p>


      </div>
    </div>
  </div>
</body>
