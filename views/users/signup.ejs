<% layout("/layout/boilerplate.ejs") %>

<style>
  /* Smooth body gradient */
  body {
    background: linear-gradient(135deg, #e9e4ff, #ffffff);
  }

  /* Card UI upgrades */
  .form-card {
    border-radius: 20px !important;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .form-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.09);
  }

  /* Input enhancements */
  .form-control {
    border-radius: 12px;
    padding: 10px 14px;
    transition: 0.2s ease-in-out;
  }

  .form-control:focus {
    box-shadow: 0 0 8px rgba(177, 151, 252, 0.7);
    border-color: #B197FC;
  }

  .form-control:hover {
    border-color: #B197FC;
  }

  /* Button upgrades */
  .create-btn {
    background: #B197FC;
    border: none;
    border-radius: 12px;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .create-btn:hover {
    background: #9d82fb;
    transform: translateY(-2px);
  }

  .create-btn:active {
    transform: scale(0.97);
  }
  .signup-footer {
  text-align: center;
  margin-top: 20px;   /* adjust as needed */
  font-size: 16px;
    font-weight: 600;

}

.signup-footer a {
  color: #7f5bff;      /* GlobeStay purple */
  font-weight: 700;
  text-decoration: none;
}

.signup-footer a:hover {
  text-decoration: underline;
}

</style>

<body>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 p-4 form-card">

          <!-- Heading -->
          <h3 class="text-center mb-4 fw-semibold" style="color: #B197FC;">
            <i class="fa-solid fa-globe fa-fade me-1 fs-4" style="color: #B197FC;"></i> Create Your GlobeStay Account
          </h3>

          <!-- Signup Form -->
          <form action="/signup" method="POST" novalidate class="needs-validation">

            <!-- Username -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Username</label>
              <input type="text" class="form-control" name="username" placeholder="Enter Username" required>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a username.</div>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Email</label>
              <input type="email" class="form-control" name="email" placeholder="Enter Email" required>
              <div class="invalid-feedback">Please enter a valid email.</div>
            </div>

            <!-- Password -->
            <div class="mb-4">
              <label class="form-label fw-semibold">Password</label>
              <input type="password" class="form-control" name="password" placeholder="Enter Password" required>
              <div class="invalid-feedback">Password is required.</div>
            </div>

            <!-- Submit button -->
            <div class="d-grid">
              <button class="btn btn-primary btn-lg create-btn" type="submit">
                <i class="fa-solid fa-paper-plane me-2"></i> Sign Up
              </button>
            </div>

          </form>

        </div>
        <p class="signup-footer">
           Already registered? <a href="/login">Log in</a>
        </p>

      </div>
    </div>
  </div>
</body>
